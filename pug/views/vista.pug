extends layouts/index.pug

block vista
  style.
    .table td,
    .table th {
        vertical-align: middle;
    }
    .img {
      width: 50px;
    }

  div(class="container")
    div(class="row justify-content-md-center")
      h1(class="pb-2 mb-4 text-danger border-bottom border-danger")='Todos los productos'
      
      br

      if existenceTable
        div(class="table-responsive")
          table(class="table table-dark table-striped")
            tr
              th='Nombre'
              th='Precio'
              th='Imagen'

              each producto in productos
                tr
                  td=producto.title
                  td=producto.price
                  td
                    img(src=producto.thumbnail alt="image" class="img")   
      else
        div(class="alert alert-danger")='No hay productos'

      br

      div(class="d-flex justify-content-center")
        a(href="/" type="button" class="btn btn-dark")='Agregar m√°s productos'