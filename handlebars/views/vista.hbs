<style>
    .table td,
    .table th {
        vertical-align: middle;
    }
    .img {
      width: 50px;
    }
</style>


<div class="container">
  <div class="row justify-content-md-center">
    <h1 class="pb-2 mb-4 text-danger border-bottom border-danger">Todos los productos</h1>
    <br>

    {{#if existenceTable}}
    <div class="table-responsive">
        <table class="table table-dark table-striped">
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
            {{#each productos}}
            <tr>
                <td>{{this.title}}</td>
                <td>${{this.price}}</td>
                <td><img src={{this.thumbnail}} alt="image" class="img"></td>
            </tr>
            {{/each}}
        </table>
    </div>
    {{else}}
      <div class="alert alert-danger">No hay productos</div>
    {{/if}}
    <br>
    <div class="d-flex justify-content-center">
      <a href="/" type="button" class="btn btn-dark">Agregar m√°s productos</a>
    </div>
  </div>
</div>